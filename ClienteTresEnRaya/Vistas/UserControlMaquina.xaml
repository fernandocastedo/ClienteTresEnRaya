<UserControl x:Class="ClienteTresEnRaya.Vistas.UserControlMaquina"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteTresEnRaya.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Button x:Name="BtnNuevoJuego" Content="Nuevo Juego" DockPanel.Dock="Top" Margin="10" Height="40" Click="BtnNuevoJuego_Click"/>
            <UniformGrid x:Name="BoardGrid" Rows="3" Columns="3" Margin="10"/>
            <TextBlock x:Name="StatusTxt" HorizontalAlignment="Center" Margin="10" FontWeight="Bold"/>
        </DockPanel>
    </Grid>
</UserControl>