<UserControl x:Class="ClienteTresEnRaya.Vistas.UserControlMaquina"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteTresEnRaya.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#1A1A2E" >
        <DockPanel Margin="20">
            <Button x:Name="BtnNuevoJuego" Content="Nuevo Juego" DockPanel.Dock="Top" Margin="0,0,0,20" Height="40" 
                    Background="#FF6B6B" Foreground="White" FontWeight="Bold" FontSize="16" Click="BtnNuevoJuego_Click"/>

            <UniformGrid x:Name="BoardGrid" Rows="3" Columns="3" HorizontalAlignment="Center" VerticalAlignment="Center"
                         Margin="0,0,0,20" Width="360" Height="360">
                <!-- Botones se agregan dinámicamente -->
            </UniformGrid>

            <TextBlock x:Name="StatusTxt" Foreground="White" FontSize="20" FontWeight="Bold" TextAlignment="Center" />
        </DockPanel>
    </Grid>
</UserControl>