<UserControl x:Class="ClienteTresEnRaya.Vistas.UserControlOnline"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteTresEnRaya.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <TextBox x:Name="HostBox" Width="150" Margin="5"/>
                <TextBox x:Name="PortBox" Width="80" Margin="5" Text="12345"/>
                <Button x:Name="ConnectBtn" Content="Conectar" Width="100" Margin="5" Click="ConnectBtn_Click"/>
            </StackPanel>
            <UniformGrid x:Name="BoardGrid" Rows="3" Columns="3" Margin="10" />
            <TextBlock x:Name="StatusTxt" HorizontalAlignment="Center" Margin="10" FontWeight="Bold"/>
        </DockPanel>
    </Grid>
</UserControl>
